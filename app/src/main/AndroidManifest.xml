<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="prx.test.kotlin.arkangel">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme1">
        <activity android:name=".splash.view.SplashActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".introSlider.view.IntroSliderActivity" />
        <activity
            android:name=".authentication.view.RegisterActivity"
            android:theme="@style/IntroTheme" />
        <activity
            android:name=".authentication.view.LoginActivity"
            android:theme="@style/IntroTheme">
        </activity>
        <activity android:name=".profile.view.ProfileActivity" />
        <activity
            android:name=".profile.presenter.EditProfileActivity"
            android:label="@string/title_activity_edit_profile"
            android:theme="@style/AppTheme1.NoActionBar"></activity>
    </application>

</manifest>